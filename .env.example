# ===========================================
# FluentEdge - Environment Variables
# ===========================================
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# --- Azure OpenAI ---
AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_TTS_DEPLOYMENT=gpt-4o-mini-tts

# --- Azure AI Foundry (GPT-5 via Azure OpenAI) ---
AZURE_AI_FOUNDRY_ENDPOINT=https://<resource>.openai.azure.com
AZURE_AI_FOUNDRY_API_KEY=
AZURE_OPENAI_API_VERSION=2024-10-21
GPT5_SMART_MODEL=gpt-5-mini
GPT5_FAST_MODEL=gpt-5-nano
GPT5_POWERFUL_MODEL=gpt-5

# --- Azure Speech Services ---
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus2

# --- Database ---
DATABASE_URL=postgresql+asyncpg://fluentedge:fluentedge@localhost:5432/fluentedge
DATABASE_URL_SYNC=postgresql://fluentedge:fluentedge@localhost:5432/fluentedge

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Auth (JWT for development) ---
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# --- Stripe (サブスクリプション決済) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STANDARD=price_...
STRIPE_PRICE_PREMIUM=price_...

# --- Application ---
ENVIRONMENT=dev
LOG_LEVEL=INFO
BACKEND_CORS_ORIGINS=http://localhost:3000
APP_VERSION=1.0.0

# --- Rate Limiting ---
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_UNAUTHENTICATED=30

# --- Monitoring (Azure Application Insights) ---
APPINSIGHTS_CONNECTION_STRING=
NEXT_PUBLIC_APPINSIGHTS_CONNECTION_STRING=
NEXT_PUBLIC_ENVIRONMENT=dev

# === LLM Provider Configuration ===
LLM_PROVIDER=azure_foundry
# azure_foundry, anthropic, bedrock, vertex, local, openai_compat
LLM_FALLBACK_PROVIDERS=
# カンマ区切り例: "anthropic,bedrock"

# --- Anthropic API (Direct) ---
ANTHROPIC_API_KEY=

# --- AWS Bedrock ---
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BEDROCK_MODEL_SONNET=anthropic.claude-sonnet-4-5-20250929-v1:0
AWS_BEDROCK_MODEL_HAIKU=anthropic.claude-haiku-4-5-20251001-v1:0
AWS_BEDROCK_MODEL_OPUS=anthropic.claude-opus-4-6-v1:0

# --- GCP Vertex AI ---
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_VERTEX_MODEL_SONNET=claude-sonnet-4-5-20250929
GCP_VERTEX_MODEL_HAIKU=claude-haiku-4-5-20251001
GCP_VERTEX_MODEL_OPUS=claude-opus-4-6

# --- Local LLM (Ollama / vLLM / LM Studio) ---
LOCAL_LLM_BASE_URL=http://localhost:11434/v1
LOCAL_LLM_API_KEY=ollama
LOCAL_MODEL_SMART=llama3.1:8b
LOCAL_MODEL_FAST=llama3.1:8b

# --- LLM Resilience ---
LLM_CIRCUIT_BREAKER_THRESHOLD=5
LLM_CIRCUIT_BREAKER_TIMEOUT=60.0
LLM_RETRY_MAX=3
LLM_RATE_LIMIT_RPM=60
