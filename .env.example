# ===========================================
# FluentEdge - Environment Variables
# ===========================================
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# --- Azure OpenAI ---
AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_TTS_DEPLOYMENT=gpt-4o-mini-tts

# --- Claude (Azure AI Foundry Marketplace) ---
AZURE_AI_FOUNDRY_ENDPOINT=https://<endpoint>.services.ai.azure.com/
AZURE_AI_FOUNDRY_API_KEY=
CLAUDE_SONNET_MODEL=claude-sonnet-4-5-20250929
CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001

# --- Azure Speech Services ---
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus2

# --- Database ---
DATABASE_URL=postgresql+asyncpg://fluentedge:fluentedge@localhost:5432/fluentedge
DATABASE_URL_SYNC=postgresql://fluentedge:fluentedge@localhost:5432/fluentedge

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Auth (JWT for development) ---
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# --- Application ---
ENVIRONMENT=dev
LOG_LEVEL=INFO
BACKEND_CORS_ORIGINS=http://localhost:3000
